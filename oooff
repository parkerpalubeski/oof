public class DoubleTennisBallsKarel extends SuperKarel
{
    /*comments
    *are
    *dumb
    */
    public void run()
    {
        move();
        while (ballsPresent())
        {
            checkBall();
        }
        if (facingSouth())
        {
            doubleSeven();
        }
        if (facingNorth())
        {
            doubleTwentyOne();
        }
        while(notFacingWest())
        {
            turnLeft();
        }
        move();
        turnAround();
    }
    private void checkBall()
    {
        takeBall();
        turnLeft();
    }
    private void putTwoBalls()
    {
        putBall();
        putBall();
    }
    private void doubleSeven()
    {
        putTwoBalls();
        putTwoBalls();
        putTwoBalls();
        putTwoBalls();
        putTwoBalls();
        putTwoBalls();
        putTwoBalls();
    }
    private void doubleTwentyOne()
    {
        doubleSeven();
        doubleSeven();
        doubleSeven();
    }
}          
